{
  "compilerOptions": {
    "declaration": true,
    "target": "ES5",
    "module": "system",
    "outDir": "./dist",
    "removeComments": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "emitDeclarationOnly": true
  },
  "include": ["src/"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
